---
import "@fontsource/dm-sans/500.css";
import "@fontsource/dm-serif-display";
import me from "@images/me.webp";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Nimo Beeren">
  <main class="max-w-screen-xl mx-auto py-24 font-medium text-neutral-700">
    <div class="flex justify-between items-end gap-16 mx-auto max-w-[1056px]">
      <div class="border-b-sky-300 border-b-4 whitespace-nowrap">
        <h1
          class="text-8xl font-serif font-normal text-neutral-800 inline-block"
        >
          Nimo<br />Beeren
        </h1>
        <p class="text-xl ml-8 leading-none inline-block" aria-label="pronouns">
          he/him
        </p>
      </div>
      <div>
        <img src={me} class="rounded-full drop-shadow-[0_0_128px_theme(colors.sky.300)]" />
      </div>
    </div>

    <div
      class="flex flex-col gap-4 mx-auto max-w-[624px] text-3xl leading-normal mt-32"
    >
      <p>Hi there! 👋</p>
      <p>
        I'm a software engineer based in Eindhoven. I build tools that help
        people use data, code and science to create great things.
      </p>
    </div>
