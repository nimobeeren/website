---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title || "Nimo Beeren"}>
  <article
    class="prose prose-xl prose-neutral mx-auto max-w-[40ch] font-medium prose-headings:font-serif prose-headings:font-normal prose-headings:text-neutral-800 prose-headings:drop-shadow prose-h1:text-6xl sm:prose-2xl sm:prose-h1:text-7xl lg:prose-h1:text-center"
  >
    <slot />
  </article>
</BaseLayout>
