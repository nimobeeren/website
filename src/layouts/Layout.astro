---
import "@fontsource/dm-sans/500.css";
import "@fontsource/dm-serif-display";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav
      class="flex justify-between drop-shadow-md bg-white pr-3 md:pl-3"
    >
      <a
        class="px-6 py-2 font-serif text-6xl text-neutral-700 drop-shadow sm:text-7xl"
        href="/">N</a
      >
      <div
        class="flex items-stretch text-lg font-medium text-neutral-600 sm:text-xl"
      >
        <a
          class="flex items-center px-3 drop-shadow-sm sm:px-4"
          href="/projects">projects</a
        >
        <a class="flex items-center px-3 drop-shadow-sm sm:px-4" href="/about"
          >about</a
        >
      </div>
    </nav>
    <div class="bg-sky-50 px-6 py-12 sm:px-8 sm:py-16 md:py-24 lg:px-24">
      <slot />
    </div>
  </body>
</html>
