---
import "@fontsource/dm-sans/500.css";
import "@fontsource/dm-serif-display";
import InstagramIcon from "src/icons/Instagram.astro";
import TwitterIcon from "src/icons/Twitter.astro";
import GitHubIcon from "../icons/GitHub.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;

const currentYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#0369a1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav class="bg-white px-6 drop-shadow-md sm:px-8 lg:px-24">
      <ul class="mx-auto flex max-w-[1424px] justify-between">
        <li>
          <a
            class="relative -ml-6 inline-block px-6 py-2 font-serif text-6xl text-neutral-700 drop-shadow after:absolute after:left-1/2 after:top-1/2 after:-z-10 after:block after:h-px after:w-px after:opacity-0 after:shadow-[0_0_32px_24px_theme(colors.sky.100)] after:transition after:duration-300 hover:after:opacity-100 sm:text-7xl sm:after:shadow-[0_0_48px_32px_theme(colors.sky.100)]"
            href="/">N</a
          >
        </li>
        <div
          class="-mr-3 flex items-stretch text-lg font-medium text-neutral-600 sm:-mr-4 sm:text-xl"
        >
          <li>
            <a
              class="group flex h-full items-center px-3 py-2 drop-shadow-sm sm:px-4"
              href="/projects"
            >
              <div
                class="relative py-1 after:absolute after:left-0 after:right-full after:top-0 after:bottom-0 after:block after:border-b-2 after:border-b-sky-300 group-hover:after:right-0 motion-safe:after:transition-all motion-safe:after:duration-300"
              >
                projects
              </div>
            </a>
          </li>
          <li>
            <a
              class="group flex h-full items-center px-3 py-2 drop-shadow-sm sm:px-4"
              href="/about"
            >
              <div
                class="relative py-1 after:absolute after:left-0 after:right-full after:top-0 after:bottom-0 after:block after:border-b-2 after:border-b-sky-300 group-hover:after:right-0 motion-safe:after:transition-all motion-safe:after:duration-300"
              >
                about
              </div>
            </a>
          </li>
        </div>
      </ul>
    </nav>
  </body>
  <div
    class="overflow-hidden bg-sky-50 px-6 py-12 sm:px-8 sm:py-16 md:py-24 lg:px-24"
  >
    <slot />
  </div>
  <footer class="bg-white py-4 px-6 drop-shadow-md sm:px-8 lg:px-24">
    <div
      class="mx-auto flex max-w-[1424px] flex-wrap items-center justify-between gap-x-2 gap-y-4"
    >
      <ul class="-ml-2 flex text-neutral-500 sm:-ml-2.5" aria-label="socials">
        <li>
          <a href="https://github.com/nimobeeren/"
            ><GitHubIcon class="w-12 h-12 p-2 sm:w-16 sm:h-16 sm:p-2.5" />
          </a>
        </li>
        <li>
          <a href="https://twitter.com/nimobeeren/"
            ><TwitterIcon class="w-12 h-12 p-2 sm:w-16 sm:h-16 sm:p-2.5" />
          </a>
        </li>
        <li>
          <a href="https://instagram.com/nimobeeren/"
            ><InstagramIcon class="w-12 h-12 p-2 sm:w-16 sm:h-16 sm:p-2.5" />
          </a>
        </li>
      </ul>
      <div class="text-sm font-medium text-neutral-600 sm:text-base">
        Â© {currentYear} Nimo Beeren
      </div>
    </div>
  </footer>
</html>
